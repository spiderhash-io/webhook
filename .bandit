# Bandit configuration file
# See https://bandit.readthedocs.io/en/latest/config.html

# Exclude test files and common false positives
exclude_dirs:
  - tests
  - venv
  - .venv
  - htmlcov
  - .pytest_cache
  - .mypy_cache
  - docker
  - docusaurus
  - temp

# Skip specific tests (B101: assert_used is common in tests, but we exclude tests anyway)
# B601: shell_injection_subprocess - may be false positives in some cases
# B602: shell_injection_subprocess_popen - may be false positives
# B108: hardcoded_tmp_directory - common in development code
skips:
  - B101  # assert_used
  - B601  # shell_injection_subprocess
  - B602  # shell_injection_subprocess_popen
  - B108  # hardcoded_tmp_directory

